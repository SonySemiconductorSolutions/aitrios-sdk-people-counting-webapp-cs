@section scripts {
    <script type="text/javascript" src="/js/SonyApi.js"></script>
    <script type="text/javascript" src="/js/Token.js"></script>
    <script type="text/javascript" src="/js/Tables.js"></script>
}
<body>
    <div class="container-fluid">
        <!-- Page Heading - Ttile -->
        <div class="d-sm-flex align-items-center justify-content-between mb-2">
            <h1 class="h3 mb-0 text-gray-800">Device & Notification settings</h1>
        </div>
    </div>
    <!-- Main content -->
    <div class="container-fluid">
        <div class="row">
            <div class="col-12 col-sm-12">
                <div class="card-body">
                    <div class="callout callout-info">
                        <h6>Device List</h6>
                    </div>
                    <div class="info-box">
                        <div class="info-box-content">
                            <div class="row" style="margin-bottom:0.5em">
                            </div>
                            <div class="row">
                                <div class="jsgridDiv">
                                    <div id="deviceTableJsGrid"></div>
                                </div>
                            </div>
                            <div class="text-right" style="width:100%">
                                <div class="div-Button-Right" style="margin-top:0">
                                    <div class="info-box-text vertical-center" id='tableInferenceResult'></div>
                                    <button type="button" class="btn btn-secondary" id="refreshDeviceTableBtn">
                                        <i class="fas fa-sync btn-fa"></i>Refresh
                                    </button>
                                </div>
                            </div>
                            <div class="row">
                                <div class="card-tools">
                                    <div class="row" style="position:relative">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card-body">
                    <div class="callout callout-info">
                        <h6>Notification List</h6>
                    </div>
                    <div class="info-box">
                        <div class="info-box-content">
                            <div class="row" style="margin-bottom:0.5em">
                            </div>
                            <div class="row">
                                <div class="jsgridDiv">
                                    <div id="notificationTableJsGrid"></div>
                                </div>
                            </div>
                            <div class="text-right" style="width:100%">
                                <div class="div-Button-Right" style="margin-top:0">
                                    <button type="button" class="btn btn-secondary" id="refreshNotificationTableBtn">
                                        <i class="fas fa-sync btn-fa"></i>Refresh
                                    </button>
                                </div>
                            </div>
                            <div class="row">
                                <div class="card-tools">
                                    <div class="row" style="position:relative">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        var token = undefined;

        $(document).ready(async function () {
            toggleLoader(false);
            console.debug("Site loading");

            await getToken()
                .then(async () => {
                console.log("Get Token");
                $("#deviceTableJsGrid").jsGrid("loadData");
            })
            .catch((err) => {
                alert("Failed to acquire token.")
            })
            .finally(() => {
            });
            toggleLoader(true);
        });
        
        $("#refreshDeviceTableBtn").click(function (evt) {
            console.debug(evt.target.id + "() " + evt.type);
            $("#deviceTableJsGrid").jsGrid("loadData");
        });

        $("#refreshNotificationTableBtn").click(function (evt) {
            console.debug(evt.target.id + "() " + evt.type);
            $("#deviceTableJsGrid").jsGrid("loadData");
        });
    </script>


</body>